{
    "name": "devcamper-api",
    "version": "1.0.0",
    "main": "server.js",
    "description": "Devcamper backend API",
    "license": "MIT",
    "author": "NguyenHHKiet",
    "scripts": {
        "start": "NODE_ENV=production node server.js",
        "dev": "nodemon server",
        "import": "node seeder -i",
        "delete": "node seeder -d",
        "prepare": "husky",
        "format": "prettier . --write"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-fileupload": "^1.5.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.2.2",
        "morgan": "^1.10.0",
        "slugify": "^1.6.6"
    },
    "devDependencies": {
        "git-commit-msg-linter": "^5.0.7",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.1.0",
        "pinst": "^3.0.0",
        "prettier": "^3.2.5"
    },
    "husky": {
        "hooks": {
            "applypatch-msg": "echo \"[Husky] applypatch-msg\"",
            "pre-applypatch": "echo \"[Husky] pre-applypatch\"",
            "post-applypatch": "echo \"[Husky] post-applypatch\"",
            "pre-commit": "echo \"[Husky] pre-commit\""
        }
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
